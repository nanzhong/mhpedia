<h1>All Monsters</h1>
<div class="row">
  <div class="small-12 columns">
    <%= paginate @monsters %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <ul class="small-block-grid-1 large-block-grid-2">
      <% @monsters.each do |monster| %>
        <li>
        <div class="panel">
          <%= link_to monster.name, monster %>
        </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= paginate @monsters %>
  </div>
</div>
