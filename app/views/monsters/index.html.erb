<h1>All Monsters</h1>
<div class="row">
  <div class="small-12 columns">
    <%= paginate @monsters %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <ul class="small-block-grid-1 large-block-grid-2">
      <% @monsters.each do |monster| %>
        <li>
        <%= link_to "<div class=\"panel\">#{monster.name}</div>".html_safe, monster %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= paginate @monsters %>
  </div>
</div>
